<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="10dp">
    <RelativeLayout
        android:id="@+id/perfil_pet"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imagem_pet"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_width="70dp"
            android:layout_centerVertical="true"
            android:layout_height="70dp"
            android:src="@drawable/logo_pet"/>
        <TextView
            android:id="@+id/nome_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imagem_pet"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/imagem_pet"
            android:layout_marginStart="20dp"
            android:text="PET ElÃ©trica UFJF"
            android:textSize="20sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>