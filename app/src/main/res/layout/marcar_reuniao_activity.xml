<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/pet_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/data_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_cinza"
            android:layout_centerVertical="true"
            android:hint="Dia da reunião"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/calendar"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@id/data_text"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@id/data_text"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/equipe_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_cinza"
            android:layout_centerVertical="true"
            android:text="Ver Horário Da Equipe"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/pessoas"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@id/equipe_text"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@id/equipe_text"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/horario_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_cinza"
            android:layout_centerVertical="true"
            android:hint="Horário da reunião"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/time"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@id/horario_text"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@id/horario_text"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/semanal_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_cinza"
            android:layout_centerVertical="true"
            android:text="Semanal" />
        <Switch
            android:id="@+id/semanal_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@id/semanal_text"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@id/semanal_text"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/aceitar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="OK"
            android:theme="@style/ThemeOverlay.MyDarkButton" />

        <Button
            android:id="@+id/cancelar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="CANCELAR"
            android:theme="@style/ThemeOverlay.MyDarkButton" />
    </LinearLayout>

</LinearLayout>