<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">
    <RelativeLayout
        android:id="@+id/projeto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imagem_projeto"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="70dp"
            android:layout_centerVertical="true"
            android:layout_height="70dp"
            android:src="@drawable/logo_pet"/>
        <TextView
            android:id="@+id/nome_projeto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imagem_projeto"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/imagem_projeto"
            android:layout_toStartOf="@id/ok"
            android:layout_toLeftOf="@id/ok"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="PET ElÃ©trica UFJF"
            android:textSize="20sp"/>
        <ImageButton
            android:id="@+id/ok"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/cancel"
            android:layout_toStartOf="@id/cancel"
            android:src="@drawable/check"
            android:background="@drawable/background_contorno_ok"/>
        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/cancel"
            android:background="@drawable/background_contorno_remover"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>