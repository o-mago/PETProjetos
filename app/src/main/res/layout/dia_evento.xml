<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_dia"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@drawable/background_cinza"
    android:layout_marginLeft="0.5dp"
    android:layout_marginStart="0.5dp"
    android:layout_marginTop="0.5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/fundo_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/marcacoes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4">

            <FrameLayout
                android:id="@+id/marcacao_tarefa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#5a6ff5"/>
            <FrameLayout
                android:id="@+id/marcacao_reuniao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#da3c42"/>
            <FrameLayout
                android:id="@+id/marcacao_aniversario"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#5af55f"/>
            <FrameLayout
                android:id="@+id/marcacao_evento"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f5f55a"/>
        </LinearLayout>
        <TextView
            android:id="@+id/numero_dia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="1"
            android:textAlignment="center"
            android:layout_weight="3"
            android:textSize="40sp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>