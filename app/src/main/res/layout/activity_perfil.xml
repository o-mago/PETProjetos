<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="#2E4551">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/foto_perfil"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/pet_logo"
                    android:layout_marginTop="20dp"
                    app:civ_border_color="#17C49B"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="5"
                    app:civ_shadow_color="#000000"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:focusable="true"/>
                <TextView
                    android:id="@+id/nick"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_below="@id/foto_perfil"
                    android:text="Mago"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_toRightOf="@id/nick"
                    android:layout_toEndOf="@id/nick"
                    android:layout_alignTop="@id/nick" />
                <TextView
                    android:id="@+id/pet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pet_perfil"
                    android:textColor="#FFFFFF"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/nick"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--<android.support.v7.widget.RecyclerView-->
                        <!--android:id="@+id/lista"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--tools:listitem="@layout/linhas_recycler"/>-->
                <!--<ListView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"/>-->
                    <TextView
                        android:id="@+id/nomeCabecalho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        style="@style/CabecalhoPerfil.TextView"
                        android:text="Nome"/>
                    <TextView
                        android:id="@+id/nome"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DadosPerfil.TextView" />
                    <TextView
                        android:id="@+id/universidadeCabecalho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        style="@style/CabecalhoPerfil.TextView"
                        android:text="Universidade"/>
                    <TextView
                        android:id="@+id/universidade"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DadosPerfil.TextView"
                        />
                    <TextView
                        android:id="@+id/cursoCabecalho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        style="@style/CabecalhoPerfil.TextView"
                        android:text="Curso"/>
                    <TextView
                        android:id="@+id/curso"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DadosPerfil.TextView" />
                    <TextView
                        android:id="@+id/emailCabecalho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        style="@style/CabecalhoPerfil.TextView"
                        android:text="Email"/>
                    <TextView
                        android:id="@+id/email"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DadosPerfil.TextView" />
                    <TextView
                        android:id="@+id/nascimentoCabecalho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        style="@style/CabecalhoPerfil.TextView"
                        android:text="Data de Nascimento"/>
                    <TextView
                        android:id="@+id/nascimento"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/DadosPerfil.TextView" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>